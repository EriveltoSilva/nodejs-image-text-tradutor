<!DOCTYPE html>
<html lang="pt-AO">
<head>
    <meta name="description" content=""> 
    <%- include('./partials/links.ejs') %>
    <title> My Image Translator - Meus Dados</title>
    <link rel="stylesheet" href="/css/create-account.css">
</head>


<body class="text-primary">
    <div class="mt-5 container rounded wrapper">
        <main>
            <div class="py-5 text-center">
                <img class="d-block mx-auto mb-4 logo" src="/image/imagem-inicio.png" alt="" width="72" height="57">

                <h1>Meus Dados</h1>
            </div>

            <div class="d-flex flex-column justify-content-center align-items-center">
                <div class="col-md-7 col-lg-8" id="dadosPessoais">
                    <form action="/user/create" method="post" id="formulario">
                        <!-------------------------------------------------- Seccão 1 ------------------------------------------------------------------------  -->
                        <section class="row g-2" id="sec1">
                            <h2>Dados Essenciais</h2>
                            <div class="col-12 col-sm-6">
                                <label for="firstName" class="form-label">Primeiro name</label>
                                <input type="text" name="firstName" class="form-control " id="firstName" value="<%=user.first_name %>"
                                     placeholder="Primeiro nome" disabled>
                            </div>

                            <div class="col-12 col-sm-6">
                                <label for="lastName" class="form-label">Sobrenome</label>
                                <input type="text" name="lastName" class="form-control" id="lastName" value="<%=user.last_name %>"
                                    placeholder="Sobrenome"  disabled>
                            </div>

                            <div class="col-12 col-sm-6">
                                <label for="bi" class="form-label">Nº Bilhete</label>
                                <input type="text" name="bi" class="form-control" id="bi" value="<%=user.bi %>"
                                    placeholder="Ex: 0040000012350L040" disabled >
                            </div>

                            <div class="col-12 col-sm-6">
                                <label for="birthday" class="form-label">Data de Nascimento</label>
                                <input type="date" name="birthday" class="form-control" id="birthday" value="<%=user.birthday %>" disabled>
                            </div>
                            <div class="col-12 col-sm-6">
                                <label for="nationality" class="form-label">Nacionalidade</label>
                                <select name="nationality" class="form-select" id="nationality" disabled >
                                    <option value="<%=user.nationality%>" selected><%=user.nationality%></option>
                                </select>
                            </div>
                            

                            <div class="col-12 col-sm-6">
                                <label for="address" class="form-label">Rua e Casa</label>
                                <input type="text" name="address" class="form-control" id="address"
                                    placeholder="Ex: Rubra Casa 40" value="<%=user.address%>" disabled > 
                            </div>
                            <div class="col-12 col-sm-6">
                                <label for="phoneNumber" class="form-label">Telefone:</label>
                                <input type="text" name="phoneNumber" class="form-control" id="phoneNumber" value=""
                                    placeholder="+244 940 811 141" disabled>
                            </div>
                            <div class="col-12 ">
                                <label for="nativeLanguage" class="form-label">Idioma Materno</label>
                                <select name="nativeLanguage" class="form-select" id="nativeLanguage" disabled>
                                    <option value="<%=user.nativeLanguage%>" selected><%=user.nativeLanguage%></option>
                                </select>
                            </div>

                            <div class="col-12 col-sm-6">
                                <label for="gender" class="form-label">Gênero</label>
                                <select name="gender" class="form-select" id="gender" disabled>
                                    <% let gender = (user.gender==="M")? "MASCULINO": "FEMENINO"; %>
                                    <option value="<%=user.gender%>" checked> <%=gender%></option>
                                </select>
                            </div>
                            <div class="col-12 col-sm-6">
                                <label for="maritalStatus" class="form-label">Estado Cívil</label>
                                <select name="maritalStatus" class="form-select" id="maritalStatus" disabled>
                                    <% 
                                        let maritalStatus = "";
                                        switch(user.maritalStatus)
                                        {
                                            case 'S': maritalStatus ="SOLTEIRO"; break;
                                            case 'C': maritalStatus ="CASADO"; break;
                                            case 'V': maritalStatus ="VIÚVO"; break;
                                            case 'D': maritalStatus ="DIVORCIADO"; break;
                                        }
                                        %>
                                    <option value="<%=user.maritalStatus %>" checked><%=maritalStatus%></option>
                                </select>
                            </div>
                            
                        
                        <!-------------------------------------------------- Seccão 3 ------------------------------------------------------------------------  -->
                        <section class="row g-1  mt-5" id="sec3">
                            <h4>Suas Credencias</h4>
                            <div class="col-12 col-sm-6">
                                <label for="username" class="form-label">Username</label>
                                <div class="input-group has-validation">
                                    <span class="input-group-text">@</span>
                                    <input type="text" name="username" class="form-control" id="username"
                                        placeholder="Username" value="<%=user.username %>" disabled>
                                </div>
                            </div>

                            <div class="col-12 col-sm-6">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" name="email" class="form-control" id="email"
                                    placeholder="you@example.com" value="<%=user.email%>" disabled>
                            </div>
                        </section>

                        <div class="col-12">
                            <hr class="my-4">
                            <!-- <div class="w-100 btn-group" role="group" aria-label="Basic example">
                                <button type="button" id="voltarSec" class="btn btn-primary"><i
                                        class='bx bx-chevron-left'></i></button>
                                <button type="button" id="avancarSec" class="btn btn-primary"><i
                                        class='bx bx-chevron-right'></i></button>
                            </div> -->
                            <button id="buttonCreateAccount" class="mt-3 w-100 btn btn-primary btn-lg"
                                type="button">Criar Conta
                            </button>
                            
                            <a href="/login" class="text-light link-voltar-login">Voltar ao login</a>
                        </div>
                    </form>
                </div>

            </div>
        </main>


        <footer class="my-5 pt-5  text-center text-small">
            <p class="mb-1 ">&copy; - 2023 My Image Translator</p>
        </footer>
    </div>
    <script src="/js/countries.js"></script>
    <script src="/js/create-account.js"></script>
</body>
</html>